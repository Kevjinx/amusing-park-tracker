extends layout.pug

block content
  a(class='btn btn-success' href="/park/add" role="button") Add Park
  table.table
    thead
      tr
        th(scope='col') Park Name
        th(scope='col') Location
        th(scope='col') Opened
        th(scope='col')
      tbody
        each park in parksDataArr
          tr
            td= park.parkName
            td #{park.city}, #{park.provinceState} #{park.country}
            td= park.opened
            td
              a(href=`/parks/${park.id}` class='btn btn-success' role='button') Details
